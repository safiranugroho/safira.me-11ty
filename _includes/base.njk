<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/prism-base16-monokai.dark.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
    <link rel="preload" href="https://fonts.googleapis.com/css?family=Roboto+Mono&display=swap" as="style">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto+Mono&display=swap">
  </head>
  <body>
    <script src="{{ '/js/setTheme.js' | url }}"></script>
    <script src="{{ '/js/onThemeChange.js' | url }}"></script>
    <nav>
      <ul class="nav-list">
      {%- for entry in collections.all | eleventyNavigation %}
        <li><a href="{{ entry.url | url }}">{{ entry.title }}</a></li>
      {%- endfor %}
        <li><button
            title="Color theme toggle"
            class="theme-toggle"
            onclick="onThemeChange()"></button></li>
      </ul>
    </nav>

    <main>
      {{ content | safe }}
    </main>

    <!-- Current page: {{ page.url | url }} -->
  </body>
</html>